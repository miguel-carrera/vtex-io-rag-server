{
  "properties": {
    "title": {
      "type": "string",
      "description": "Document title",
      "maxLength": 200
    },
    "content": {
      "type": "string",
      "description": "Document content/body text",
      "maxLength": 50000
    },
    "url": {
      "type": "string",
      "description": "URL from where to fetch the document content",
      "maxLength": 2000
    },
    "category": {
      "type": "string",
      "description": "Document category (e.g., Product, Business, Technical, FAQ)",
      "maxLength": 100
    },
    "documentTags": {
      "type": "array",
      "description": "Array of tags for categorization and search",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 20
    },
    "author": {
      "type": "string",
      "description": "Document author or creator",
      "maxLength": 100
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether this document is active and searchable",
      "default": true
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the document content",
      "maxLength": 500
    }
  },
  "required": ["title", "category", "enabled"],
  "v-cache": false,
  "v-default-fields": [
    "title",
    "content",
    "url",
    "category",
    "documentTags",
    "author",
    "enabled",
    "summary"
  ],
  "v-indexed": ["title", "category", "documentTags", "author", "enabled"],
  "v-immediate-indexing": true
}
